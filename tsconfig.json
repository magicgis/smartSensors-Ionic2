{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
      "typings/**/*",
          "src/**/*"
    ],
    "exclude": [
      "node_modules",
          "**/*.spec.ts"
    ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
